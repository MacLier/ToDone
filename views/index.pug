doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title= title
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous")
  body
    div(class='container')
      h1= title
      h3 Message: #{message}
      br
      form(type='submit' method="post" action="register") 
        div(class='row g-3 align-items-center')
          div(class='col-auto')
            label(class='col-form-label' for='firstName') First name
          div(class='col-auto')
            input(class='inputPassword6 form-control' name='firstName' id='firstName' type='text' aria-describedby='passwordHelpInline')
          div(class='col-auto')
            span(class='passwordHelpInline form-text')
                |Must be 8-20 characters long.
        div(class='row g-3 align-items-center')
          div(class='col-auto')
            label(class='col-form-label' for='lastName') Last name
          div(class='col-auto')
            input(class='inputPassword6 form-control' name='lastName' id='lastName' type='text' aria-describedby='passwordHelpInline')
          div(class='col-auto')
            span(class='passwordHelpInline form-text')
                |Must be 8-20 characters long.
        div(class='row g-3 align-items-center')
          div(class='col-auto')
            label(class='col-form-label' for='nickName') Nick name
          div(class='col-auto')
            input(class='inputPassword6 form-control' name='nickName' id='nickName' type='text' aria-describedby='passwordHelpInline')
          div(class='col-auto')
            span(class='passwordHelpInline form-text')
                |Must be 8-20 characters long.                                                                               
        div(class='row g-3 align-items-center')
          div(class='col-auto')
            label(class='col-form-label' for='email') Email
          div(class='col-auto')
            input(class='inputPassword6 form-control' name='email' id='email' type='email' aria-describedby='passwordHelpInline')
          div(class='col-auto')
            span(class='passwordHelpInline form-text')
                |Must be 8-20 characters long.
        div(class='row g-3 align-items-center')
          div(class='col-auto')
            label(class='col-form-label' for='password') Password
          div(class='col-auto')
            input(class='inputPassword6 form-control' name='password' id='password' type='password' aria-describedby='passwordHelpInline')
          div(class='col-auto')
            span(class='passwordHelpInline form-text')
                |Must be 8-20 characters long.                                                                               
        button.btn.btn-primary(type='submit') Register 
      h1 Or Login
      form(type='submit' method="post" action="login") 
          div(class='row g-3 align-items-center')
            div(class='col-auto')
              label(class='col-form-label' for='email') Email
            div(class='col-auto')
              input(class='inputPassword6 form-control' name='email' id='email' type='email' aria-describedby='passwordHelpInline')
            div(class='col-auto')
              span(class='passwordHelpInline form-text')
                  |Must be 8-20 characters long.
          div(class='row g-3 align-items-center')
            div(class='col-auto')
              label(class='col-form-label' for='password') Password
            div(class='col-auto')
              input(class='inputPassword6 form-control' name='password' id='password' type='text' aria-describedby='passwordHelpInline')
            div(class='col-auto')
              span(class='passwordHelpInline form-text')
                  |Must be 8-20 characters long.
        button.btn.btn-primary(type='submit') Login
    script(src='https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js' integrity='sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p' crossorigin='anonymous')
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.min.js' integrity='sha384-Atwg2Pkwv9vp0ygtn1JAojH0nYbwNJLPhwyoVbhoPwBhjQPR5VtM2+xf0Uwh9KtT' crossorigin='anonymous')
    script(src='index.js')
